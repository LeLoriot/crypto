{% extends 'base.html.twig' %}

{% block body %}
    <table class="table text-center">
        <tr>
            <th class="active text-center">Nom</th>
            <th class="active text-center">Symbole</th>
            <th class="active text-center">Date de Cr√©ation</th>
            <th class="active text-center">Favoris</th>
            <th class="active text-center">Modifier</th>
            <th class="active text-center">Supprimer</th>
        </tr>

        {% for crypto in cryptos %}
            <tr>
                <td><a href="{{ path('crypto.show', {id: crypto.id}) }}">{{ crypto.nom }}</a></td>
                <td>{{ crypto.symbole }}</td>
                <td>{{ crypto.dateCreation|date('d-m-Y')}}</td>
                <td><a class = "btn btn-default" href="{{ path('crypto.edit', {id: crypto.id}) }}">
                        <span class="glyphicon glyphicon-heart" color="pink" aria-hidden="true" > </span>
                    </a></td>
                <td><a class = "btn btn-default" href="{{ path('crypto.edit', {id: crypto.id}) }}">
                        <span class="glyphicon glyphicon-pencil" color="blue" aria-hidden="true" > </span>
                    </a></td>
                <td><a class = "btn btn-default" href="{{ path('crypto.delete', {id: crypto.id}) }}">
                        <span class="glyphicon glyphicon-trash" color="red" aria-hidden="true" > </span>
                    </a></td>
            </tr>
        {% endfor %}
    </table>

    <a class="btn btn-default" href="{{ path('crypto.create') }}">
        <span class="glyphicon glyphicon-plus" aria-hidden="true" > </span>
        Ajouter une crytpomonnaie
    </a>
{% endblock %}